{
  "manifest_version": 3,
  "name": "My LeetCode Tracker",
  "version": "1.0",
  "description": "Custom LeetCode practice with spaced repetition.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://leetcode.com/problems/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "My LeetCode Tracker"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}